<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" 
	tools:context="com.example.controle_remoto_app.ControleActivity">
	
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:src="@drawable/logo" />
    
    <LinearLayout 
        		android:id="@+id/linearLayoutLed1" 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:paddingTop="50px"
				android:background="#FFFFFF">
	<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:textColor="#00BFFF"
			android:textStyle="bold"
			android:text="LED 1" />
		</LinearLayout>
	
    <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<ImageButton
        android:id="@+id/btOnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/on" />
	<TextView 	
	    	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:paddingRight="150px" />
	<ImageButton
        android:id="@+id/btOffA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/off" />
		</LinearLayout>
	
    <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:paddingTop="25px"
				android:background="#FFFFFF">
	<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:textColor="#00BFFF"
			android:textStyle="bold"
			android:text="LED 2" />
		</LinearLayout>
    	
    <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<ImageButton
        android:id="@+id/btOnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/on"/>
	<TextView 	
	    	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:paddingRight="150px" />
	<ImageButton
        android:id="@+id/btOffB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/off" />
		</LinearLayout>
	
    <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:paddingTop="25px"
				android:background="#FFFFFF">
	<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:textColor="#00BFFF"
			android:textStyle="bold"
			android:text="LED 3" />
		</LinearLayout>
		
    <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<ImageButton
        android:id="@+id/btOnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/on"/>
	<TextView 	
	    	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:paddingRight="150px" />
	<ImageButton
        android:id="@+id/btOffC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/off" />
		</LinearLayout>
	<TextView
    		  android:layout_width="fill_parent" 
    		  android:layout_height="wrap_content" 
    		   android:textColor="#00BFFF"
    		   android:textSize="15sp"
    		   android:textStyle="bold"
    		  android:gravity="center"
    		  android:background="#FFFFFF"  
    		  android:text="STATUS" />
	<LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<TextView 
			android:paddingRight="10px" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#00BFFF"
    		android:textSize="15sp"
			android:textStyle="bold"
			android:text="LED 1:" />

	<TextView
	    android:id="@+id/tvStatusA"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="41px"
	    android:text="on..."
	    android:textColor="#00BFFF"
    	android:textSize="15sp"
	    android:textStyle="bold" >
</TextView>
		</LinearLayout>
		
	<LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<TextView 
			android:paddingRight="10px" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#00BFFF"
    		android:textSize="15sp"
			android:textStyle="bold"
			android:text="LED 2:" />

	<TextView
	    android:id="@+id/tvStatusB"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="41px"
	    android:text="on..."
	    android:textColor="#00BFFF"
    	android:textSize="15sp"
	    android:textStyle="bold" >
</TextView>
		</LinearLayout>
		
	<LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<TextView 
			android:paddingRight="10px" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#00BFFF"
    		android:textSize="15sp"
			android:textStyle="bold"
			android:text="LED 3:" />

	<TextView
	    android:id="@+id/tvStatusC"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="41px"
	    android:text="on..."
	    android:textColor="#00BFFF"
    	android:textSize="15sp"
	    android:textStyle="bold" >
</TextView>
		</LinearLayout>		
</LinearLayout>